<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="3"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#5F9EA0"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/sholat"
                android:onClick="sholat"
                android:src="@mipmap/ic_launcher_sholat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sholat"
                android:layout_centerHorizontal="true"
                android:text="Jadwal Sholat"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#D2691E">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/produk"
                android:src="@mipmap/ic_launcher_halal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_below="@+id/produk"
                android:layout_centerHorizontal="true"
                android:text="Produk Halal"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#CD5C5C">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/doa"
                android:src="@mipmap/ic_launcher_doa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doa"
                android:layout_centerHorizontal="true"
                android:text="Doa Harian"/>
        </RelativeLayout>
    </FrameLayout>

</GridLayout>